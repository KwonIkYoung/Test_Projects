<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.kiy.app.test_project.TestMainActivity">

        <Button
            android:id="@+id/btn_check_package"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:text="패키지 테스트"/>

        <Button
            android:id="@+id/btn_sub_string"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/btn_check_package"
            android:text="sub_string"/>

        <Button
            android:id="@+id/btn_video_test"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/btn_sub_string"
            android:text="btn_video_test"/>

        <Button
            android:id="@+id/btn_base64"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/btn_video_test"
            android:text="Base64 Test"/>

        <Button
            android:id="@+id/btn_reg"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/btn_base64"
            android:text="REG Test"/>

        <Button
            android:id="@+id/btn_captcha"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/btn_base64"
            android:text="CAPTCHA_1"/>

        <Button
            android:id="@+id/btn_exo_player"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/btn_captcha"
            android:text="EXO player Test"/>

        <Button
            android:id="@+id/btn_exo_player2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/btn_exo_player"
            android:text="EXO player Test 2"/>

        <Button
            android:id="@+id/btn_service_start"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/btn_exo_player2"
            android:text="btn_service_start"/>

        <Button
            android:id="@+id/btn_service_start_noti"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/btn_service_start"
            android:text="btn_service_start"/>

        <Button
            android:id="@+id/btn_cal_check"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/btn_service_start_noti"
            android:text="날짜 체크 "/>

        <Button
            android:id="@+id/btn_facebook_native_ad"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/btn_service_start_noti"
            android:text="페이스북 Native Ad"/>
        <Button
            android:id="@+id/btn_doze_check"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/btn_service_start_noti"
            android:text="Doze Mode check"/>
    </RelativeLayout>
</ScrollView>